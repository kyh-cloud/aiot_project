<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SystemActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_marginTop="5dp"
        android:background="#fffefeee">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/alarmTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="주요알람"
                    android:textColor="#ff000000"
                    android:textSize="20dp" />

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/layout_stroke">

        <Button
            android:id="@+id/systemButton_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#ee111111"
            android:textColor="#ffffff"
            android:text="system" />

        <Button
            android:id="@+id/securityButton_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#ee111111"
            android:text="security"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/alarmButton_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#eeee3333"
            android:text="alarm"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/settingsButton_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#ee111111"
            android:textColor="#ffffff"
            android:text="fire" />
    </LinearLayout>
</LinearLayout>